---
import ProjectItem from "./ProjectItem.astro";
import { TAGS } from "../tags";
import { translations } from "../lang";

const PROJECTS = [
  {
    title: "Buno",
    description: translations.en.projects.buno.description,
    github: "https://github.com/juancruzroldan95/buno-app",
    deploy: "https://bunoapp.vercel.app/",
    image: "/projects/buno-app.webp",
    tags: [
      TAGS.NEXT,
      TAGS.REACT,
      TAGS.SHADCNUI,
      TAGS.FIREBASE,
      TAGS.TYPESCRIPT,
      TAGS.VERCEL,
    ],
  },
  {
    title: "Power Button",
    description: translations.en.projects.powerbutton.description,
    github: "https://github.com/juancruzroldan95/buno-app",
    deploy: "https://power-button.vercel.app",
    image: "/projects/power-button.webp",
    tags: [
      TAGS.NEXT,
      TAGS.REACT,
      TAGS.TAILWIND,
      TAGS.FIREBASE,
      TAGS.TYPESCRIPT,
      TAGS.VERCEL,
    ],
  },
  {
    title: "Energialy",
    description: translations.en.projects.energialy.description,
    github: "https://github.com/energialy/energialy-app",
    deploy: "https://energialy.vercel.app/",
    image: "/projects/energialy.webp",
    tags: [
      TAGS.NODE,
      TAGS.EXPRESS,
      TAGS.SEQUELIZE,
      TAGS.POSTGRESQL,
      TAGS.JAVASCRIPT,
      TAGS.VERCEL,
    ],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map((project) => (
      <article class="projects flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <ProjectItem {...project} />
      </article>
    ))
  }
</div>
